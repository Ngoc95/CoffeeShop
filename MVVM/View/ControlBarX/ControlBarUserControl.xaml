<UserControl x:Class="QuanLiCoffeeShop.MVVM.View.ControlBarX.ControlBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLiCoffeeShop.MVVM.View.ControlBarX"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="80">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0"
                Style="{DynamicResource ButtonMinimizeStyle}"/>
        
        <Button Grid.Column="1"
                Command="{Binding CloseWindowCommand}"
                Style="{DynamicResource MyButtonCloseStyle}"/>
    </Grid>
</UserControl>
